# ============================================
# CallMate MVP 환경 변수
# ============================================

# Application
APP_NAME=CallMate API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# ============================================
# AI 서비스 (필수)
# ============================================

# OpenAI - 통화 분석용 (gpt-4o-mini)
# https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxx

# Deepgram - 음성→텍스트 변환 + 화자분리 (빠른 처리)
# https://console.deepgram.com/
DEEPGRAM_API_KEY=xxx

# ============================================
# AWS (배포 시 필수)
# ============================================

# S3 - 음성/PDF 파일 저장
# IAM 사용자 생성 후 Access Key 발급
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=callmate-uploads

# ============================================
# 기타 설정
# ============================================

# CORS - 프론트엔드 도메인 (Vercel), 여러 개는 콤마로 구분
ALLOWED_ORIGINS=http://localhost:3000,https://callmate-fe.vercel.app

# File Upload
MAX_UPLOAD_SIZE=52428800
UPLOAD_DIR=./uploads
